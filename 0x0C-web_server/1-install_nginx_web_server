#!/usr/bin/env bash
# Install and configure Nginx on web-01

# Update package list
apt-get update

# Install Nginx
apt-get -y install nginx

# Create a default HTML file with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Check if Nginx is not running, then start it
if ! pgrep -x nginx > /dev/null; then
    service nginx start
fi
