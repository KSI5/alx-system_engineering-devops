#!/usr/bin/env bash
# This script displays "Best School" 10 times, with "Hi" on the 9th iteration

count=1

# Use a while loop to repeat the echo command 10 times
while [ $count -le 10 ]
do
    # Check if it's the 9th iteration
    if [ $count -eq 9 ]
    then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    (( count++ ))
done
